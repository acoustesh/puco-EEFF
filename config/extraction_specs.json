{
  "_description": "General extraction settings for PDF parsing. Sheet-specific extraction rules are in config/<sheet_name>/extraction.json.",

  "number_format": {
    "style": "chilean",
    "thousands_separator": ".",
    "decimal_separator": ",",
    "negative_format": "parentheses",
    "currency": "MUS$"
  },

  "search_strategy": {
    "max_attempts": 3,
    "fallback_to_user_review": true,
    "user_review_method": "extract_page_to_temp_pdf"
  },

  "document_structure": {
    "_comment": "Expected section ordering and distances for validation",
    "expected_nota_order": [20, 21, 22, 23],
    "typical_nota_distance_lines": {
      "min": 20,
      "max": 200
    },
    "section_markers": {
      "nota_header_pattern": "^\\d+\\.\\s+[A-ZÁÉÍÓÚÑ]",
      "table_end_markers": ["Totales", "Total"]
    }
  }
}
